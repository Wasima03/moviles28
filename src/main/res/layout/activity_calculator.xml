<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#544A4A"
    tools:ignore="UseSwitchCompatOrMaterialXml">


    <Switch
        android:id="@+id/switch1"
        android:layout_width="167dp"
        android:layout_height="78dp"
        android:layout_margin="16dp"
        android:text="Estilo"
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="#D3D0D0"
        android:gravity="end|center_vertical"
        android:padding="12dp"
        android:text="0"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="223dp"
        android:layout_height="25dp"
        android:layout_marginTop="176dp"
        android:text="vwrfvww"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="94dp"
        tools:ignore="MissingConstraints" />

    <TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="500dp"
    >
    <TableRow>

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="268dp"
            android:background="@drawable/boton_num"
            android:onClick="operandClick"
            android:text="1" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/boton_num"
            android:onClick="operandClick"
            android:text="2"
             />

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/boton_num"
            android:onClick="operandClick"
            android:text="3">

        </Button>

        <Button
            android:id="@+id/bDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/boton_operandos"
            android:onClick="operandClick"
            android:text="/" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/boton_num"
            android:onClick="operandClick"
            android:text="4"
             />

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/boton_num"
            android:onClick="operandClick"
            android:text="5"
            />

        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="268dp"
            android:background="@drawable/boton_num"
            android:onClick="operandClick"
            android:text="6"
             />

        <Button
            android:id="@+id/bMul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="268dp"
            android:background="@drawable/boton_operandos"
            android:onClick="operandClick"
            android:text="X"
             />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/boton_num"
            android:onClick="operandClick"
            android:text="7"
             />

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/boton_num"
            android:onClick="operandClick"
            android:text="8"
             />

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/boton_num"
            android:onClick="operandClick"
            android:text="9"
             />

        <Button
            android:id="@+id/bRes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/boton_operandos"
            android:onClick="operandClick"
            android:text="-"
             />
    </TableRow>

    <TableRow>


    <Button
        android:id="@+id/bC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/boton_operandos"
        android:onClick="clearClick"
        android:text="C"
         />

        <Button
        android:id="@+id/b0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/boton_num"
        android:onClick="operandClick"
        android:text="0"
         />

        <Button
        android:id="@+id/bIg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/boton_operandos"
        android:backgroundTint="@color/pink"
        android:text="="

         />
    <Button
        android:id="@+id/bSum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="268dp"
        android:background="@drawable/boton_operandos"
        android:onClick="operatorClick"
        android:text="+"
        />
    </TableRow>
</TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
